files:
    "/sbin/appstart":
        mode: "000755"
        owner: webapp
        group: webapp
        content: |
            #!/usr/bin/env bash
            JAR_PATH=/var/app/current/build/libs/compass-backend-0.0.1-SNAPSHOT.jar

            # Kill existing app processes
            killall java 2> /dev/null || true

            # Start application
            java -Xmx512m -jar $JAR_PATH --spring.profiles.active=rds